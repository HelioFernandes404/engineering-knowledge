# GLPI API Configuration
API_HOST_GLPI = "https://itsm.example.com/apirest.php/"
USER_TOKEN = "your-glpi-user-token"
API_TOKEN = "your-glpi-app-token"

# GLPI Fields Plugin Configuration
# Container ID for the fingerprint custom field (Fields plugin)
# Get this value from GLPI: Setup > Custom Fields > Check the container ID for fingerprints
GLPI_FINGERPRINT_CONTAINER_ID = "4"

# Discord Integration (optional)
DISCORD_WEBHOOK = ""

# Twilio Integration (optional)
ACCOUNT_SID = ""
AUTH_TOKEN_TWILIO = ""
FROM_NUMBER = ""
TO_NUMBER = ""

# LaunchDarkly & ServiceNow
PORT = "5000"
LAUNCHDARKLY_SDK_KEY = "sdk-your-launchdarkly-key"
SERVICENOW_API_KEY = "your-servicenow-api-key"
SERVICENOW_INSTANCE = ""
FEATURE_INCIDENT_CONTEXT_KEY = "incident_availability"

# AWS DynamoDB
# Ambiente local: USE_LOCAL_SSO=true (usa perfil SSO configurado no ~/.aws/config)
# Ambiente produção: USE_LOCAL_SSO=false (usa AWS_ACCESS_KEY_ID e AWS_SECRET_ACCESS_KEY ou IAM role)
USE_LOCAL_SSO = "false"

# AWS Credentials (apenas para produção quando USE_LOCAL_SSO=false)
# Descomente e configure em produção:
# AWS_ACCESS_KEY_ID = "your-aws-access-key"
# AWS_SECRET_ACCESS_KEY = "your-aws-secret-key"
# AWS_DEFAULT_REGION = "us-east-1"

# Error handling
# FATAL_ON_ERROR=true: container morre em erros críticos (DynamoDB, GLPI, etc) - recomendado para produção
# FATAL_ON_ERROR=false: retorna 500 mas continua rodando - útil para desenvolvimento
FATAL_ON_ERROR = "true"
